                                            <b:InvokeCommandAction Command="{Binding DataContext.FileAliasChangesCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding Id}" />
                                        </b:EventTrigger>
                                        <b:EventTrigger EventName="KeyDown">
                                            <b:InvokeCommandAction Command="{Binding DataContext.FileAliasChangesCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding Id}" />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </TextBox>
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{Binding ConvertDate}" />
                                <Button
