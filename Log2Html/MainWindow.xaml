<Window
    x:Class="Log2Html.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:converter="clr-namespace:Log2Html.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Log2Html"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Log2Html.ViewModel"
    Title="Log2Html"
    Width="1200"
    Height="800"
    MinWidth="1200"
    MinHeight="800"
    Closing="MainView_Closing"
    Icon="pack://application:,,,/Assets/jibini.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:ColorToSolidColorBrushConverter x:Key="ColorToSolidColorBrushConverter" />
    </Window.Resources>
    <Window.DataContext>
        <viewmodel:MainViewVM x:Name="vm" x:FieldModifier="public" />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Menu>
                <MenuItem Command="{Binding}" Header="About" />
                <MenuItem Header="Update" />
            </Menu>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.4*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    AllowDrop="True"
                    Background="Pink"
                    Drop="File_Drop">
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="拖拽到Pink区域" />
                </StackPanel>
                <TextBlock
                    x:Name="txt_log"
                    Grid.Row="1"
                    Margin="5"
                    TextWrapping="Wrap" />

                <GridSplitter
                    Grid.Row="1"
                    Height="20"
                    HorizontalAlignment="Stretch"
                    Background="Orange" />

                <StackPanel
                    Grid.Row="3"
                    Margin="5"
                    Background="Gray">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Name="txt_html_path"
                            Margin="5"
                            Text="HTML Path"
                            TextWrapping="Wrap" />
                        <Button
                            Margin="50"
                            HorizontalAlignment="Stretch"
                            Click="Open_Html_File"
                            Content="Open File" />
                        <Button
                            Margin="50"
                            Click="Open_Click"
                            Content="Open" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="Add_Setting"
                        Content="Add" />
                    <Button
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="Save_Settings"
                        Content="Save" />
                </Grid>
                <ScrollViewer Grid.Row="1">
                    <ItemsControl
                        ItemsSource="{Binding ColorSettings}"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="0.5*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                        <ColumnDefinition Width="*" />
                                        <!--<ColumnDefinition Width="0.4*" />-->
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Grid.Column="0"
                                        Command="{Binding DataContext.RemoveSettingCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                        CommandParameter="{Binding SettingId}"
                                        Content="X" />
                                    <Label Grid.Column="1" Content="Key word" />

                                    <TextBox
                                        Grid.Column="2"
                                        Margin="5"
                                        FontWeight="Bold"
                                        Text="{Binding Key}" />
                                    <Label Grid.Column="3" Content="Color" />

                                    <TextBox
                                        Grid.Column="4"
                                        Margin="5"
                                        FontWeight="Bold"
                                        Text="{Binding ColorRgb}" />

                                    <Button
                                        Grid.Column="5"
                                        Width="30"
                                        Height="30"
                                        Background="{Binding ColorRgb, Converter={StaticResource ColorToSolidColorBrushConverter}}" />

                                    <CheckBox
                                        Grid.Column="6"
                                        Margin="5"
                                        Content="Apply for all line"
                                        IsChecked="{Binding ShouldApplyForAllLine}" />
                                    <!--<CheckBox
                                    Grid.Column="6"
                                    Margin="5"
                                    Content="Ignore Case"
                                    IsChecked="{Binding ShouldIgnoreCase}" />-->
                                    <!--<xctk:ColorPicker Name="ClrPcker_Background" SelectedColorChanged="ClrPcker_Background_SelectedColorChanged" />-->
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="2">
                <colorpicker:StandardColorPicker x:Name="main" Style="{StaticResource DefaultColorPickerStyle}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
